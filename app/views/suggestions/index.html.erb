
<% if current_user.nil? %>
 <h1>Welcome, guest!</h1>
 <p>You'll need to log into Spotify to use this application. Click "Sign In With Spotify" above!</p>
<% else %>
 <h1>Welcome, <%= current_user.name %>!</h1>
 <!-- display image, nickname, email etc -->
<% end %>


<h1>Search suggestions by keyword: </h1>
<%= form_tag do %>
    <%= label_tag :food_pairing_query %>
    <%= text_field_tag :food_pairing_query %>
    <%=submit_tag %>
<% end %>

<%= params %>

<% if params["pairing"].present? %>
  <p> Your pairing suggestions for <%= params["pairing_query"] %> are: </p>
  <p> artist: <%= params["song"].name %> </p>
  <p> food: <%= params["food_item"].name %> </p>


  <%# button_to "Favorite", action: favorites_path(params["pairing"].id), :controller => "favorite" %>
  <%= link_to "Favorite", favorites_path(params["pairing"].id), method: :post %>
<% end %>
